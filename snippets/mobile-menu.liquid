<div
    id="drawer-example"
    class="fixed top-0 left-0 z-40 h-screen p-4 overflow-y-auto transition-transform -translate-x-full bg-white max-w-md lg:hidden w-full"
    tabindex="-1"
    aria-labelledby="drawer-label"
  >
    <button
      type="button"
      data-drawer-hide="drawer-example"
      aria-controls="drawer-example"
      class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 absolute top-2.5 end-2.5 flex items-center justify-center cursor-pointer"
    >
      <svg class="w-3 h-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
      </svg>
      <span class="sr-only">Close menu</span>
    </button>
    <div class="w-full my-4 flex items-center justify-center">
        <img src="{{ section.settings.logo | image_url }}" alt="{{ shop.name }} Logo" class="h-24 w-auto">
    </div>
    <nav class="flex flex-col space-y-4 border-t border-gray-200 pt-4">
        {% for link in linklists['main-menu'].links %}
            <a
              href="{{ link.url }}"
              class="flex items-center font-medium {% if link.url == request.path %}text-blue {% else %}text-gray-700 hover:text-blue {% endif %}"
            >
              {{ link.title }}
            </a>
          {% endfor %}
    </nav>
    
   
  </div>