<section class="bg-white w-full flex justify-center pt-20 px-4 sm:px-6 lg:px-8 border-b border-gray-200 pb-10">
    <div class="flex max-w-6xl">
        <div class="w-full">
            <h1 class="max-w-2xl mb-4 text-4xl font-bold tracking-tight leading-none md:text-5xl xl:text-6xl">{{ section.settings.title }}</h1>
            <p class="max-w-2xl mb-6 font-light text-gray-500 lg:mb-8 md:text-lg lg:text-xl">{{ section.settings.subtext_title }}</p>
            <a href="{{ section.settings.button_url }}" class="inline-flex items-center justify-center px-5 py-3 mr-3 text-base font-medium text-center text-white rounded-lg bg-blue hover:bg-blue-dark">
                {{ section.settings.button_label }}
                <svg class="w-5 h-5 ml-2 -mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
            </a>
            <a href="{{ section.settings.second_btn_label_url }}" class="inline-flex items-center justify-center px-5 py-3 text-base font-medium text-center text-gray-900 border border-gray-300 rounded-lg hover:bg-gray-100">
                {{ section.settings.second_btn_label }}

            </a> 
        </div>
        <div class="hidden lg:mt-0 object-contain object-bottom w-full lg:flex">
            <img class="" src="{{ section.settings.image | image_url }}" alt="Hero image">
        </div>                
    </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
        "type": "image_picker",
        "id": "image",
        "label": "Hero Image"
    },
    {
        "type": "text",
        "id": "title",
        "label": "Hero Title",
        "default": "Erst checken, dann handeln"
    }, 
    {
        "type": "text",
        "id": "subtext_title",
        "label": "Slogan Text",
        "default": "Genuine-Analytics bringt das Resultat direkt zu Ihnen nach Hause. Einfach und unkompliziert."
    },
    {
        "type": "text",
        "id": "button_label",
        "label": "Button Text",
        "default": "Erfahre mehr"
    },
    {
        "type": "url",
        "id": "button_url",
        "label": "Button URL"
    },
    {
        "type": "text",
        "id": "second_btn_label",
        "label": "Second Button Text",
        "default": "Formulare"
    },
    {
        "type": "url",
        "id": "second_btn_label_url",
        "label": "Second Button URL"
    }
],
}

{% endschema %}