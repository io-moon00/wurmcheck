
<div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
    <div class="mx-auto max-w-screen-sm text-center">
        <img class="mx-auto mb-4" src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/404/404-computer.svg" alt="404 Not Found">
        <h1 class="mb-4 text-2xl font-extrabold text-primary-600 dark:text-primary-500">{{ section.settings.title }}</h1>
        <p class="mb-10 text-3xl tracking-tight font-bold text-gray-900 md:text-4xl dark:text-white">{{ section.settings.subtext_title }}</p>
        <p class="mb-4 text-gray-500 dark:text-gray-400">Here are some helpful links instead:</p>
        <ul class="flex justify-center items-center space-x-4 text-gray-500 dark:text-gray-400">
            <li>
                <a href="#" class="underline hover:text-gray-900 dark:hover:text-white">Home</a>
            </li>
            <li>
                <a href="#" class="underline hover:text-gray-900 dark:hover:text-white">Search</a>
            </li>
            <li>
                <a href="#" class="underline hover:text-gray-900 dark:hover:text-white">Help</a>
            </li>
            <li>
                <a href="#" class="underline hover:text-gray-900 dark:hover:text-white">Contact</a>
            </li>
        </ul>
    </div>   
</div>

{% schema %}
{
  "name": "404",
  "tag": "section",
  "class": "flex items-center justify-center h-screen bg-white",
  "settings": [
    {
        "type": "text",
        "id": "title",
        "default": "404 Not Found",
        "label": "404 Heading Title"
    }, 
    {
        "type": "text",
        "id": "subtext_title",
        "default": "The page that you are looking for does not exist.",
        "label": "404 Subtext Title"
    },
    {   "type": "text",
        "id": "button_label",
        "default": "Back to home",
        "label": "Button Label"
    },
    {   "type": "url",
        "id": "button_url",
        "label": "Button URL"
    }
],
  
}
{% endschema %}