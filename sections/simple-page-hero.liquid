<section class="bg-white flex justify-center px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl w-full">
        <div class="flex flex-col-reverse lg:grid items-center gap-8 mb-8 lg:mb-16 lg:gap-12 lg:grid-cols-12">
            <div class="col-span-7 text-center sm:mb-6 lg:text-left lg:mb-0">
                <h1 class="mb-4 text-4xl font-bold leading-none tracking-tight text-gray-900 xl:text-6xl ">
                    {{ section.settings.heading_part1 }}<span class="text-blue uppercase">{{ section.settings.heading_part2 }}</span>
                </h1>
                <p class="max-w-xl mx-auto mb-6 font-light text-gray-500 lg:mx-0 xl:mb-8 md:text-lg xl:text-xl">{{ section.settings.paragraph }}</p>      
            </div>
            <div class="col-span-5">
                <img src="{{ section.settings.featured_image | image_url }}" class="h-full max-h-96 lg:h-full object-cover" alt="{{ section.settings.featured_image.alt }}">
            </div>
        </div>
    </div>
</section>

{% schema %}
{
  "name": "Simple Page Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading_part1",
      "label": "Heading Part 1",
      "default": "immuno"
    },
    {
      "type": "text",
      "id": "heading_part2",
      "label": "Heading Part 2",
      "default": "Check"
    },
    {
      "type": "image_picker",
      "id": "featured_image",
      "label": "Featured Image"
    },
    {
      "type": "richtext",
      "id": "paragraph",
      "label": "Paragraph"
    }
  ],
  "presets":[{
    "name": "Simple Page Hero",
    "settings": {
        "heading_part1": "Immuno",
        "heading_part2": "Check",
    }
  }
  ]
}
{% endschema %}